extends layout.pug

block content
  <div class='account'>
    <div>
      h3='CLIENTS INSCRITS'
        form( method="POST" )
          input( type='email', name="email", placeholder='Email' )
          input( type='password', name="password", placeholder='Mot de passe' )
          button( type="submit")= "Accèder à mon compte"
    </div>
    <div>
      h3='NOUVEAUX CLIENTS'
      a(href='/register' class="button")= "Créer mon compte"
    </div>
  </div>
